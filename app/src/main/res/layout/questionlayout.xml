<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:screenOrientation="portrait">


    <Spinner
        android:id="@+id/question1Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions1"
        android:textColor="@android:color/holo_purple"
        android:visibility="visible"
        tools:foregroundTint="@color/colorAccent"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question1Spinner"
        android:layout_marginTop="25dp"
        android:background="@android:color/black"
        android:hint="Enter your answer here"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/question2Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer1"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions2"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question2Spinner"
        android:layout_marginTop="25dp"
        android:autoText="false"
        android:background="@android:color/black"
        android:hint="Enter your answer here"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/question3Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question3Spinner"
        android:layout_marginTop="25dp"
        android:background="@android:color/black"
        android:hint="Enter your answer here"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/question4Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer3"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions4"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question4Spinner"
        android:layout_marginTop="25dp"
        android:background="@android:color/black"
        android:hint="Enter your answer here"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="20sp" />


    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:layout_weight="1"
        android:onClick="ResultScreen"
        android:text="Submit"
        android:visibility="visible"
        android:background="@drawable/my_button_bg"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>