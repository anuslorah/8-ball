<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sizedqbg"
    android:screenOrientation="portrait">

    <Spinner
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:entries="@array/Questions1"
        android:visibility="visible" />


    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question1"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:hint="Enter your answer here"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer1"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:entries="@array/Questions2" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question2"
        android:layout_marginTop="25dp"
        android:autoText="false"
        android:background="@android:color/background_light"
        android:hint="Enter your answer here"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:entries="@array/Questions3" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question3"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:hint="Enter your answer here"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:entries="@array/Questions4"
        android:layout_below="@+id/answer3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/question4"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:hint="Enter your answer here"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:visibility="visible" />
    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_weight="1"
        android:text="@string/submitbutton"
        android:visibility="visible"
        android:onClick="goToTransition"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>