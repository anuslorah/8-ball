<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:screenOrientation="portrait">

    <TextView
        android:id="@+id/Question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions1"
        android:textColor="@android:color/black"
        android:visibility="visible"
        android:textSize="35sp"
        android:text="@string/question1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Question1"
        android:background="@android:color/black"
        android:hint="@string/answer1"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:inputType="text" />

    <TextView
        android:id="@+id/Question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions1"
        android:textColor="@android:color/black"
        android:visibility="visible"
        android:textSize="35sp"
        android:text="@string/question2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/answer1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Question2"
        android:background="@android:color/black"
        android:hint="@string/answer2"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:visibility="visible"
        android:inputType="text" />

    <TextView
        android:id="@+id/Question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:entries="@array/Questions1"
        android:textColor="@android:color/black"
        android:visibility="visible"
        android:textSize="35sp"
        android:text="@string/question3"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Question3"
        android:background="@android:color/black"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHint="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:visibility="visible"
        android:inputType="text"
        android:hint="@string/answer3" />

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/answer3"
        android:background="@drawable/my_button_bg"
        android:text="@string/submitbutton"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingRight="15sp"
        android:paddingLeft="15sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>